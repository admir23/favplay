<div class="container">
  <div class="row mt-5">
		<div class="col-md-4 offset-md-4">
			<h1>Songs <%= link_to 'Add new', new_song_path, class: 'btn btn-primary' %></h1>
		</div>
		<br>
		<div  class="container" id="notice">
		  <%= display_flash :notice %>
		</div>
		<br>
		<table class="table pt-5 mt-4">
	    <thead>
	      <tr>
	        <th>#</th>
	        <th width="10%"></th>
	        <th>Song</th>
	        <th>Artist</th>
	        <th>Album</th>
	        <th>Length</th>
	        <th>Genre</th>
	      </tr>
	    </thead>
		  <tbody>
		    <%= render @songs %>
		  </tbody>
	  </table>
	 </div>
   <div class="row">
    <div class="container">
      <div class="col-md-4 offset-md-4">
       <%= will_paginate(@songs, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer) %> 
    </div>
</div>	 	
