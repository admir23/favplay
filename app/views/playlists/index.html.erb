<div class="container p-5">
	<div class="row">
		<div class="col-md-2 offset-md-10">
		  <!-- Button trigger modal -->
			<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#mynewplaylist">
		   Add new playlist
		  </button>
		</div>
	</div>

	<br>
	<hr>	

		<div class="row" id="container_playlists">
			<%= render @playlists %>
		</div>	
			<!-- Modal -->
		 	<%= form_for(@playlist, remote: true) do |f| %>
				<div class="modal fade" id="mynewplaylist" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
				  <div class="modal-dialog" role="document">
				    <div class="modal-content">

				      <div class="modal-header">
				        <h5 class="modal-title" id="exampleModalLabel">Playlist</h5>
				        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
				          <span aria-hidden="true">&times;</span>
				        </button>
				      </div>

				      <div class="modal-body">
				      	<div class="field">
					       <%= f.label :name %>
								 <%= f.text_field :name, class:'form-control playlist_name' %>
								</div>	

								<div class="field">
					       <%= f.label :description %>
								 <%= f.text_area :description, class:'form-control playlist_description' %>
								</div>  
				      </div>

				      <div class="modal-footer">
				        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
				         <%= submit_tag "Create", class: "btn btn-primary" %>
				      </div>
				    </div>
				  </div>
			</div>
			<% end %>
	  <!-- Modal	 -->

	</div>
