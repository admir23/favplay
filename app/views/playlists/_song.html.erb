<div class="panel-heading">songs <span class="badge"><%= @playlist.songs.count %></span>
</div>      
  <table class = 'table table-striped table-hover'>
    <thead>
			<tr>
    		<th>Name</th>
    		<th>Duration</th>
    		<th>Actions</th>
			</tr>
		</thead>
		<tbody>
    <% @playlist.songs.each do |song| %>
			<tr>
				<td><%= link_to song.name, song_path(song) %></td>	
				<td><%= song.length %></td>		
				<td>
				<% if logged_in? %>a
					<% unless current_user.favorite_songs.exists?(id: song.id) %>
						<%= link_to favorite_songs_path(song_id: song), method: :post do %>
						<span class="glyphicon glyphicon-heart-empty gi-2x" role="button" aria-hidden="true"></span>
					<% end %>
					<% else %>
						<%= link_to favorite_song_path(song), method: :delete do %>
						<span class="glyphicon glyphicon-heart gi-2x" role="button" aria-hidden="true"></span>
						<% end %>
					<% end %>
				
					<%= link_to song.youtube_link, target: :_blank do %>
					<span class="glyphicon glyphicon-play gi-2x" role="button" aria-hidden="true"></span>
					<% end %>
				</td>
				<td>
					<%= link_to 'Remove from playlist', playlist_song_path(song_id: song.id, playlist_id: @playlist.id), method: :delete, data: {confirm: "Are you sure?"}, class: 'btn btn-sm btn-danger' %>
				</td>
				<% end %>
			</tr>
		<% end %>
		</tbody>
  </table>