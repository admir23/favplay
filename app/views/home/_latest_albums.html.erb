<div class="col-sm-6 col-md-4 col-lg-3 mt-4">
  <div class="table-responsive-vertical tbl-top">
	  <table class="table table-hover">
	    <th>
	      <h3>Latest albums</h3>
	      <br>
	     </th>
	     <th></th>
	     <tbody> 
	       <tr>    
	         <% @latest_albums.each do |album| %>
		       <th><%= link_to album_path(album) do %>
	             <%= image_tag album.img_url, class: "card-img-top img-thumbnail" %>
		         <% end %></th>	
	    	   <td><%= link_to album.name, album_path(album) %>
	    	   <br>
	    	   <p></p>
				 	 <p><%= link_to album.artist.name, artist_path(album.artist), class:'artist' %></p></td>
				 </tr> 
		    <% end %>
			</tbody>
		</table>
  </div>
</div>	

