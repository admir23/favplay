 <% if logged_in? %>
<% @current_user.favorites.each_with_index do|song, i| %>
<tr>
  <th scope="row"><%= (i+1) %></th>
  <td>
    <div class="">
      <%= link_to favorite_path(song), method: :delete , remote: true do %>
      <div class="like-btn text-center" favorite_id="<%= @favorite %>">
        <span class="fa fa-heart red-heart"></span>
      </div>
   <% end %>
  </td>
  <td><%= link_to song.song.name,song_path(song.song.id) %></td> 
  <td><%= link_to song.song.artist.name, artist_path(song.song.artist.id)%></td>
  <td><%= link_to song.song.album.name, album_path(song.song.album.id)%></td>
  <td><%= link_to song.song.length, song_path(song.song.id)%></td>
  <td><%= link_to song.song.genre.name, genre_path(song.song.genre_id)%></td>
  <td><a data-toggle="modal" data-target="#addSong" data-id="<%= song.id %>" title="Add this song to playlist" class="open-AddSong" href="#addSong"><i class="fa fa-plus" aria-hidden="true" rel="tooltip" data-placement="top" title="Add to playlist"></i></a>
  <div class="modal fade" id="addSong">
    <%= render 'shared/add_song_to_playlist' %>
  </div>
  </td>
  <% end %>
</tr>
<% end %>

  
