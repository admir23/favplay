 <div class="container mt-5">
 <h1 class="display-4 d-none d-sm-block">Dashboard</h1>
 <p class="lead d-none d-sm-block">(latest data below)</p>
  <hr>
  <div class="row mb-3">
    <div class="col-xl-3 col-sm-4">
        <div class="card bg-success text-white h-100">
            <div class="card-body bg-success">
                <div class="rotate">
                    <i class="fa fa-users fa-3x"></i>
                </div>
                <h6 class="text-uppercase">Users</h6>
                <h1 class="display-4"><%= @users.count %></h1>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-sm-4">
        <div class="card text-white bg-danger h-100">
            <div class="card-body bg-danger">
                <div class="rotate">
                    <i class="fa fa-list fa-3x"></i>
                </div>
                <h6 class="text-uppercase">Songs</h6>
                <h1 class="display-4"><%= @songs.count %></h1>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-sm-4">
        <div class="card text-white bg-info h-100">
            <div class="card-body bg-info">
                <div class="rotate">
                    <i class="fa-folder fa-3x"></i>
                </div>
                <h6 class="text-uppercase">Albums</h6>
                <h1 class="display-4"><%= @albums.count %></h1>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-sm-4">
        <div class="card text-white bg-warning h-100">
            <div class="card-body bg-warning">
                <div class="rotate">
                    <i class="fa fa-share fa-3x"></i>
                </div>
                <h6 class="text-uppercase">Artists</h6>
                <h1 class="display-4"><%= @artists.count %></h1>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-sm-4">
        <div class="card text-white bg-warning h-100">
            <div class="card-body bg-inverse">
                <div class="rotate">
                    <i class="fa fa-share fa-3x"></i>
                </div>
                <h6 class="text-uppercase">Genres</h6>
                <h1 class="display-4"><%= @genres.count %></h1>
            </div>
        </div>
    </div>
  </div>
</div>
