 <div class="container mt-5">
 <h1 class="display-4 d-none d-sm-block">Dashboard</h1>
  <hr>
  <div class="container">
    <div class="row">
        <div class="col-md-3 col-sm-4 col-xs-2">
          <div class="circle bg-success ">
            <p><%= @songs.size %></p>
          </div>
         <div class="text-center mt-2 mb-2">
          <h1 class="blockquote">Total Songs</h1></div> 
        </div>
        <div class="col-md-3 col-sm-4 col-xs-2">
          <div class="circle bg-info ">
            <p><%= @artists.size %></p>
          </div>
         <div class="text-center mt-2 mb-2">
          <h1 class="blockquote">Total Artists</h1></div> 
        </div>
        <div class="col-md-3 col-sm-4 col-xs-2">
          <div class="circle bg-warning">
            <p><%= @albums.size %></p>
          </div>
          <div class="text-center mt-2 mb-2">
          <h1 class="blockquote">Total Albums</h1></div> 
        </div>
        <div class="col-md-3 col-sm-4 col-xs-2">
          <div class="circle bg-danger">
            <p><%= @genres.size %></p>
          </div>
         <div class="text-center mt-2 mb-2">
          <h1 class="blockquote">Total Genres</h1></div> 
        </div>
        <div class="col-md-3 col-sm-4 col-xs-2">
          <div class="circle ">
            <p><%= @users.size %></p>
          </div>
         <div class="text-center mt-2 mb-2">
          <h1 class="blockquote"> Total Users</h1></div> 
        </div>
    </div>
  </div>
</div>
