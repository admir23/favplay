<div class="container mt-5">
	<br>
  <div class="row">
  	<div class="col-sm-6 col-md-4 col-lg-3 mt-4">
  		<div class="card">
  		  <%= image_tag @album.img_url, class: 'card-img-top' %>
  	  </div>
  	</div>
  	<div class="col-sm-6 col-md-4 col-lg-3 mt-4">
  		<h3><%= link_to @album.name, album_path(@album) %></h3>
		  <p>Artist: <%= link_to @album.artist.name, artist_path(@album.artist) %></p>
		  <p>Created: <%= time_ago_in_words(@album.created_at) %></p>
		  <p>Released: <%= @album.released %></p>
   	  <%= link_to 'Edit', edit_album_path(@album), class:'btn btn-primary'%>
		  <%= link_to 'Delete', album_path(@album), method: :delete,data: {confirm: "Are you sure?"}, class:'btn btn-danger'%>
  	</div>
		<div class="container">
			<table class="table pt-5 mt-4">
	    <thead>
	      <tr>
	        <th>#</th>
	        <th></th>
	        <th>Song</th>
	        <th>Artist</th>
	        <th>Length</th>
	        <th>Genre</th>
	      </tr>
	    </thead>
		  <tbody>
		    <%= render 'song' %>
		  </tbody>
	  </table>
  </div>
</div> 
