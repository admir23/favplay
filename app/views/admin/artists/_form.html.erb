<%= form_for [:admin, @artist] do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name, class:'form-control' %>
	<%= error_for :name, @artist.errors %>
	<br>	
	<%= f.label :artist_details %>
	<%= f.text_area :artist_details, class:'form-control' %>
	<%= error_for :artist_details, @artist.errors %>
	<br>	
	<%= f.label :artist_image %>
	<%= f.text_area :artist_image, class:'form-control' %>
	<%= error_for :artist_image, @artist.errors %>
	<br>		
	<%= f.label :genre_id %>
	<%= f.collection_select :genre_id, Genre.all, :id, :name, {prompt: 'Choose genre'}, class:'form-control' %>
	<%= error_for :name, @artist.errors %>
	<br>	
	<%= f.submit params[:action] == 'new' ? 'Save' : 'Update', class: 'btn btn-block btn-primary' %>
<% end %>	

