<%= form_for [:admin, @song] do |f| %>
	<%= f.label :name, 'Title' %>
	<%= f.text_field :name, class:'form-control' %>
	<%= error_for :name, @song.errors %>
	<br>
	<%= f.label :length %>
	<%= f.text_field :length, class:'form-control' %>
	<%= error_for :length, @song.errors %>
	<br>	
	<%= f.label :artist_id %>
	<%= f.collection_select :artist_id, Artist.all, :id, :name, { prompt: 'Choose artist' }, class: 'form-control' %>
	<%= error_for :artist, @song.errors %>
	<br>
	<%= f.label :album_id %>
	<%= f.collection_select :album_id, Album.all, :id, :name, { prompt: 'Choose album' }, class:'form-control' %>
	<%= error_for :album, @song.errors %>
	<br>	
	<%= f.label :genre_id %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name, { prompt: 'Choose genre'}, class: 'form-control' %>
	<%= error_for :genre, @song.errors %>
	<br>
	<%= f.label :youtube_link %>
	<%= f.text_field :youtube_link, class: 'form-control' %>
	<%= error_for :youtube_link, @song.errors %>
	<br>
	<%= f.submit params[:action] == 'new' ? 'Save' : 'Update', class: 'btn btn-block btn-primary' %>
<% end %>	

